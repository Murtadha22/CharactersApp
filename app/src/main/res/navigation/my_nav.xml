<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/homeFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.retrofittest.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.retrofittest.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_discriptionCharacterFragment"
            app:destination="@id/discriptionCharacterFragment" />
    </fragment>
    <fragment
        android:id="@+id/discriptionCharacterFragment"
        android:name="com.example.retrofittest.fragments.DiscriptionCharacterFragment"
        tools:layout="@layout/fragment_discription_character">
        <argument
            android:name="character"
            app:argType="com.example.retrofittest.models..Result"
            app:nullable="false" />
    </fragment>
    <fragment
        android:id="@+id/favouriteFragment"
        android:name="com.example.retrofittest.fragments.FavoriteFragment"
        android:label="fragment_favourite"
        tools:layout="@layout/fragment_favourite" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.retrofittest.fragments.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>